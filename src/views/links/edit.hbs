<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/edit/{{links.id}}" method="post">
                     <div class="form-group">
                        <input type="text" class="form-control" value="{{links.title}}" name="title" placeholder="title">
                     </div>
                     <div class="form-group"> 
                        <input type="url"  name="url" value="{{links.url}}" class="form-control" placeholder="url">
                     </div>
                     <div class="form-group">
                        <textarea name="description" value="{{links.description}}" rows="2" class="form-control" placeholder="description">

                        </textarea>
                     </div>
                     <div class="form-control">
                        <button class="btn btn-success btn-block"> 
                            Save
                        </button>
                     </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>